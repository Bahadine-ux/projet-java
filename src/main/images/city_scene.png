        <animateTransform attributeName="transform"
                          type="translate"
                          from="850 700"
                          to="-50 700"
                          dur="12s"
                          repeatCount="indefinite"/>
    </g>

    <!-- Traffic Light -->
    <g transform="translate(650, 600)">
        <!-- Stand -->
        <rect x="-5" y="0" width="10" height="100" fill="#333"/>
        <!-- Light Box -->
        <rect x="-15" y="-90" width="30" height="90" rx="5" ry="5" fill="#333"/>
        <!-- Red Light -->
        <circle cx="0" cy="-75" r="10" fill="#e74c3c">
            <animate attributeName="opacity" values="1;0.3;1" dur="4s" repeatCount="indefinite" begin="0s"/>
        </circle>
        <!-- Yellow Light -->
        <circle cx="0" cy="-50" r="10" fill="#f1c40f">
            <animate attributeName="opacity" values="0.3;1;0.3" dur="4s" repeatCount="indefinite" begin="1.5s"/>
        </circle>
        <!-- Green Light -->
        <circle cx="0" cy="-25" r="10" fill="#2ecc71">
            <animate attributeName="opacity" values="0.3;1;0.3" dur="4s" repeatCount="indefinite" begin="3s"/>
        </circle>
    </g>

