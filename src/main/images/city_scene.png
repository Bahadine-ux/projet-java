        <rect x="-110" y="-50" width="220" height="25" rx="5" ry="5" fill="#d6eaf8"/>
        <!-- Bus doors -->
        <rect x="-20" y="-25" width="40" height="45" rx="5" ry="5" fill="#d6eaf8"/>
