        <circle cx="0" cy="0" r="35" fill="url(#logoGradient)" opacity="0.9"/>
        <!-- Stylized bus/transport icon -->
        <rect x="-25" y="-12" width="50" height="24" rx="5" ry="5" fill="white"/>
        <rect x="-22" y="-8" width="44" height="8" rx="2" ry="2" fill="#333"/>
        <circle cx="-15" cy="12" r="8" fill="white" stroke="#333" stroke-width="2"/>
        <circle cx="15" cy="12" r="8" fill="white" stroke="#333" stroke-width="2"/>
        <circle cx="-15" cy="12" r="3" fill="#333"/>
        <circle cx="15" cy="12" r="3" fill="#333"/>
